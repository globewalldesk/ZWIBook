{
  "name": "ksf-pg-reader",
  "version": "1.0.0",
  "description": "A reader for Project Gutenberg books stored in ZWI format.",
  "homepage": "https://encyclosphere.org/",
  "author": {
    "name": "Larry Sanger / Knowledge Standards Foundation",
    "email": "larry@encyclosphere.org"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder",
    "rebuild": "electron-rebuild"
  },
  "license": "Copyright 2024. All rights reserved.",
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.knowledgestandardsfoundation.pgreader",
    "linux": {
      "maintainer": "Larry Sanger/KSF <larry@encyclosphere.org>",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "files": [
      "bookshelf.html",
      "bookshelf.js",
      "categories.js",
      "fflate.js",
      "html/**/*",
      "images/**/*",
      "main.js",
      "metadatabase.js",
      "metadatabase.json",
      "metadatabase.min.js",
      "preload.js",
      "reader.html",
      "reader.js",
      "search.html",
      "search.js",
      "stylesheet.css"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}

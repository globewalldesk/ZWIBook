{
  "name": "zwibook",
  "version": "1.0.0",
  "description": "A reader for Project Gutenberg books stored in ZWI format.",
  "homepage": "https://encyclosphere.org/",
  "author": {
    "name": "Larry Sanger / Knowledge Standards Foundation",
    "email": "larry@encyclosphere.org"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "license": "Copyright 2024. All rights reserved.",
  "devDependencies": {
    "electron": "^30.3.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.knowledgestandardsfoundation.pgreader",
    "productName": "ZWIBook",
    "win": {
      "target": "nsis",
      "artifactName": "${productName}.${ext}",
      "icon": "images/icons/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "artifactName": "${productName}.${ext}",
      "maintainer": "Larry Sanger/KSF <larry@encyclosphere.org>",
      "category": "Education",
      "icon": "images/icons/icon.png"
    },
    "files": [
      "about.html",
      "about.js",
      "bookshelf.html",
      "bookshelf.js",
      "categories.js",
      "fflate.js",
      "html/**/*",
      "images/**/*",
      "main.js",
      "metadatabase.json",
      "preload.js",
      "reader.html",
      "reader.js",
      "search.html",
      "search.js",
      "stylesheet.css"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "images/icons/icon.icns",
      "compression": "normal",
      "artifactName": "${productName}.${ext}",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false
    }
  }
}
